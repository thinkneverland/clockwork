{
  "name": "tapped-extension",
  "displayName": "Tapped - Laravel Livewire Debugger",
  "version": "1.0.0",
  "description": "Real-time debugging for Laravel Livewire applications",
  "author": "ThinkNeverland",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testMatch='**/e2e/**/*.test.ts'",
    "lint": "eslint src lib --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/browser": "^9.9.0",
    "highlight.js": "^11.4.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql-formatter": "^4.0.2"
  },
  "devDependencies": {
    "@plasmohq/storage": "^1.9.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/chrome": "^0.0.254",
    "@types/firefox-webext-browser": "^111.0.1",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "plasmo": "^0.84.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs",
      "webRequest"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}
